    },
    "summary": {
      "type": "string"
    },
    "doi": {
      "type": "string"
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "releaseDate": {
      "type": "date"
    },
    "license": {
      "type": "string"
    },
